{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug-simple",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-Iinclude",
                "-g",
                "-O0",
                "-Wall",
                "src/main.cpp",
                "-o",
                "MemoryPool.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-Iinclude",
                "-O2",
                "-Wall",
                "src/main.cpp",
                "-o",
                "MemoryPool.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}